<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkAdjustment" id="adjustment1">
    <property name="lower">1</property>
    <property name="upper">8</property>
    <property name="value">4</property>
    <property name="step_increment">1</property>
    <property name="page_increment">10</property>
  </object>
  <object class="GtkAdjustment" id="adjustment2">
    <property name="lower">70</property>
    <property name="upper">120</property>
    <property name="value">72</property>
    <property name="step_increment">1</property>
    <property name="page_increment">10</property>
  </object>
  <template class="PreferencesDialog" parent="AdwPreferencesWindow">
    <property name="title" translatable="1">Preferences</property>
    <property name="modal">1</property>
    <property name="destroy_with_parent">1</property>

    <!-- Editor Page -->
    <child>
      <object class="AdwPreferencesPage">
        <property name="title">Editor</property>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Font</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Use the system fixed width font</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_default_font">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Editor Font</property>
                <child>
                  <object class="GtkFontButton" id="fontpicker">
                    <property name="hexpand">1</property>
                    <property name="valign">center</property>
                    <property name="font">Monospace 12</property>
                    <property name="use_font">1</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Display</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Tab Width</property>
                <child>
                  <object class="GtkSpinButton" id="spinbutton_tabsize">
                    <property name="valign">center</property>
                    <property name="focusable">1</property>
                    <property name="adjustment">adjustment1</property>
                    <property name="climb_rate">1</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Insert spaces instead of tabs</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_spaces_instead_of_tabs">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Enable text wrapping</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_wrap_text">
                    <property name="valign">center</property>
                    <signal name="activate" handler="on_checkbutton_wrap_text_toggled" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Do not split words over two lines</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_wrap_word">
                    <property name="valign">center</property>
                    <signal name="activate" handler="on_checkbutton_wrap_text_toggled" swapped="no"/>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Highlight current line</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_highlight_current_line">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Show line numbers</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_show_line_numbers">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Show whitespace</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_show_whitespace">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Prefer dark theme</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_prefer_dark_theme">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Use syntax highlighting</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_use_syntax_highlighting">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Syntax highlighting color scheme</property>
                <child>
                  <object class="GSettingsStringComboBox" id="combobox_style_scheme">
                    <property name="hexpand">1</property>
                    <property name="valign">center</property>
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="model">syntaxschemestore</property>
                    <property name="gsettings-column">0</property>
                    <child>
                      <object class="GtkCellRendererText" id="syntax_scheme_renderer"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Code Overview</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Show overview map</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_show_overview_map">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Overview map style</property>
                <child>
                  <object class="GSettingsStringComboBox" id="combo_overview_map">
                    <property name="valign">center</property>
                    <property name="visible">True</property>
                    <property name="can_focus">False</property>
                    <property name="model">overviewstylestore</property>
                    <property name="active">0</property>
                    <property name="gsettings-column">0</property>
                    <child>
                      <object class="GtkCellRendererText" id="overview_style_renderer"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">External Editor</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Use default system editor</property>
                <child>
                  <object class="GtkSwitch" id="system_editor_checkbutton">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwEntryRow" id="custom_edit_command_entry">
                <property name="title" translatable="1">Editor command</property>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

    <!-- Folder Comparison Page -->
    <child>
      <object class="AdwPreferencesPage">
        <property name="title">Folder Comparisons</property>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Shallow Comparison</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Compare files based only on size and timestamp</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_shallow_compare">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Timestamp resolution</property>
                <child>
                  <object class="GSettingsIntComboBox" id="combo_timestamp">
                    <property name="valign">center</property>
                    <property name="can_focus">False</property>
                    <property name="model">timestampstore</property>
                    <property name="active">0</property>
                    <property name="gsettings-column">0</property>
                    <child>
                      <object class="GtkCellRendererText" id="combo_timestamp_renderer"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Apply text filters during folder comparisons</property>
                <property name="subtitle" translatable="1">Note: enabling text filters may make comparing large files much slower</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_folder_filter_text">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Symbolic Links</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Ignore symbolic links</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_ignore_symlinks">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup" id="column_list_vbox">
            <property name="title">Visible Columns</property>
          </object>
        </child>

      </object>
    </child>

    <!-- Version Control Page -->
    <child>
      <object class="AdwPreferencesPage">
        <property name="title">Version Control</property>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Version Comparison</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Order when comparing file revisions</property>
                <child>
                  <object class="GSettingsBoolComboBox" id="combo_file_order">
                    <property name="valign">center</property>
                    <property name="can_focus">False</property>
                    <property name="model">fileorderstore</property>
                    <property name="active">0</property>
                    <property name="gsettings-column">0</property>
                    <child>
                      <object class="GtkCellRendererText" id="file_order_renderer"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Order when merging files</property>
                <child>
                  <object class="GSettingsStringComboBox" id="combo_merge_order">
                    <property name="valign">center</property>
                    <property name="can_focus">False</property>
                    <property name="model">mergeorderstore</property>
                    <property name="active">0</property>
                    <property name="gsettings-column">0</property>
                    <child>
                      <object class="GtkCellRendererText" id="merge_order_renderer"/>
                      <attributes>
                        <attribute name="text">1</attribute>
                      </attributes>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Commit Messages</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Show right margin</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_show_commit_margin">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Show right margin at</property>
                <child>
                  <object class="GtkSpinButton" id="spinbutton_commit_margin">
                    <property name="halign">center</property>
                    <property name="valign">center</property>
                    <property name="focusable">1</property>
                    <property name="adjustment">adjustment2</property>
                    <property name="climb_rate">1</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Automatically break lines at right margin on commit</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_break_commit_lines">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

    <!-- File Filters Page -->
    <child>
      <object class="AdwPreferencesPage">
        <property name="title">File Filters</property>

        <child>
          <object class="AdwPreferencesGroup" id="file_filters_vbox">
            <property name="title">Filename filters</property>
            <property name="description" comments="Translators: &apos;filter out&apos; refers to removing matched files and folders from the display">When performing directory comparisons, you may filter out files and directories by name. Each pattern is a list of shell style wildcards separated by spaces.</property>
          </object>
        </child>

      </object>
    </child>

    <!-- Text Filters Page -->
    <child>
      <object class="AdwPreferencesPage">
        <property name="title">Text Filters</property>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title">Change trimming</property>
            <child>
              <object class="AdwActionRow">
                <property name="title" translatable="1">Trim blank line differences from the start and end of changes</property>
                <child>
                  <object class="GtkSwitch" id="checkbutton_ignore_blank_lines">
                    <property name="valign">center</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup" id="text_filters_vbox">
            <property name="title">Text filters</property>
            <property name="description">When performing file comparisons, you may ignore certain types of changes. Each pattern here is a python regular expression which replaces matching text with the empty string before comparison is performed. If the expression contains groups, only the groups are replaced. See the user manual for more details.</property>
          </object>
        </child>

      </object>
    </child>

  </template>

  <object class="GtkSizeGroup" id="sizegroup_file_order_combos">
    <widgets>
      <widget name="combo_file_order"/>
      <widget name="combo_merge_order"/>
    </widgets>
  </object>
  <object class="GtkListStore" id="fileorderstore">
  <columns>
      <column type="gboolean"/>
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">False</col>
        <col id="1" translatable="yes">Left is remote, right is local</col>
      </row>
      <row>
        <col id="0">True</col>
        <col id="1" translatable="yes">Left is local, right is remote</col>
      </row>
    </data>
  </object>
  <object class="GtkListStore" id="overviewstylestore">
    <columns>
      <column type="gchararray"/>
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">chunkmap</col>
        <col id="1" translatable="yes">Simple change map</col>
      </row>
      <row>
        <col id="0">compact-sourcemap</col>
        <col id="1" translatable="yes">Compact source map</col>
      </row>
      <row>
        <col id="0">full-sourcemap</col>
        <col id="1" translatable="yes">Full source map</col>
      </row>
    </data>
  </object>
  <object class="GtkListStore" id="mergeorderstore">
    <columns>
      <column type="gchararray"/>
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">remote-merge-local</col>
        <col id="1" translatable="yes">Remote, merge, local</col>
      </row>
      <row>
        <col id="0">local-merge-remote</col>
        <col id="1" translatable="yes">Local, merge, remote</col>
      </row>
    </data>
  </object>
  <object class="GtkListStore" id="syntaxschemestore">
    <columns>
      <column type="gchararray"/>
      <column type="gchararray"/>
    </columns>
  </object>
  <object class="GtkListStore" id="timestampstore">
    <columns>
      <column type="gint"/>
      <column type="gchararray"/>
    </columns>
    <data>
      <row>
        <col id="0">1</col>
        <col id="1" translatable="yes">1ns (ext4)</col>
      </row>
      <row>
        <col id="0">100</col>
        <col id="1" translatable="yes">100ns (NTFS)</col>
      </row>
      <row>
        <col id="0">1000000000</col>
        <col id="1" translatable="yes">1s (ext2/ext3)</col>
      </row>
      <row>
        <col id="0">2000000000</col>
        <col id="1" translatable="yes">2s (VFAT)</col>
      </row>
    </data>
  </object>
</interface>
