<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkBox" id="view-toolbar">
    <property name="spacing">6</property>
    <child>
      <object class="GtkBox">
        <property name="homogeneous">1</property>
        <style>
          <class name="linked"/>
        </style>
        <child>
          <object class="GtkButton">
            <property name="action-name">view.file-push-left</property>
            <property name="use-action-appearance">False</property>
            <property name="tooltip-text" translatable="1">Push current change to the left</property>
            <property name="focus_on_click">0</property>
            <style>
              <class name="image-button"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">go-previous-symbolic</property>
                <property name="icon-size">normal</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="action-name">view.file-push-right</property>
            <property name="use-action-appearance">False</property>
            <property name="tooltip-text" translatable="1">Push current change to the right</property>
            <property name="focus_on_click">0</property>
            <style>
              <class name="image-button"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">go-next-symbolic</property>
                <property name="icon-size">normal</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkMenuButton" id="copy_action_button">
        <property name="focus_on_click">0</property>
        <property name="tooltip-text" translatable="1">Copy chunks</property>
        <property name="use_popover">True</property>
        <style>
          <class name="image-button"/>
        </style>
        <child>
          <object class="GtkImage">
            <property name="icon-name">edit-copy-symbolic</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkButton">
        <property name="action-name">view.file-delete</property>
        <property name="use-action-appearance">False</property>
        <property name="tooltip-text" translatable="1">Delete change</property>
        <property name="focus_on_click">0</property>
        <style>
          <class name="image-button"/>
        </style>
        <child>
          <object class="GtkImage">
            <property name="icon-name">edit-delete-symbolic</property>
            <property name="icon-size">normal</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
