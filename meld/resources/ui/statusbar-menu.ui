    <item>
      <attribute name="label" translatable="yes">Highlight current line</attribute>
      <attribute name="action">view-local.highlight-current-line-local</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Text wrapping</attribute>
      <attribute name="action">view-local.wrap-mode-bool</attribute>
    </item>
  </menu>
</interface>
