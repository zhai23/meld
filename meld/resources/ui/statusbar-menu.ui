    <item>
      <attribute name="label" translatable="yes">Show line numbers</attribute>
      <attribute name="action">view-local.show-line-numbers</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Show whitespace</attribute>
      <attribute name="action">view-local.draw-spaces-bool</attribute>
